{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "settings": {
    "import/resolver": {
      "babel-module-alias": {}
    }
  },
  "rules": {
    "semi": ["error", "never"],
    "new-cap": ["off"],
    "no-shadow": ["off"],
    "arrow-body-style": ["off"],
    "no-mixed-operators": ["off"],
    "jsx-quotes": ["error", "prefer-single"],
    "react/jsx-filename-extension": ["off"],
    "global-require": ["off"],
    "import/no-unresolved": ["off"]
  }
}
